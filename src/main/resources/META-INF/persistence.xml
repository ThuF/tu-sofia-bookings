<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="tu.sofia.bookings"
		transaction-type="RESOURCE_LOCAL">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>

		<class>tu.sofia.bookings.entity.User</class>
		<class>tu.sofia.bookings.entity.Room</class>
		<class>tu.sofia.bookings.entity.RoomPrice</class>
		<class>tu.sofia.bookings.entity.RoomReview</class>
		<class>tu.sofia.bookings.entity.Booking</class>

		<shared-cache-mode>NONE</shared-cache-mode>
	</persistence-unit>
</persistence>
